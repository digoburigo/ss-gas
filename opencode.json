{
	"$schema": "https://opencode.ai/config.json",
	"mcp": {
		"context7": {
			"type": "local",
			"enabled": true,
			"command": ["npx", "-y", "@upstash/context7-mcp"]
		},
		"shadcn": {
			"type": "local",
			"enabled": true,
			"command": ["npx", "shadcn@latest", "mcp"]
		},
		"better-auth": {
			"type": "remote",
			"enabled": true,
			"url": "https://mcp.chonkie.ai/better-auth/better-auth-builder/mcp"
		}
	}
}
